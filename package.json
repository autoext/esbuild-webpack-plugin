{
  "name": "@autoext/esbuild-webpack-plugin",
  "version": "1.1.1",
  "description": "Use esbuild as minifier.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsc -w --p src",
    "build": "rm -rf dist && tsc -p src"
  },
  "keywords": [],
  "author": "chencheng <sorrycc@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:autoext/esbuild-webpack-plugin.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.0.13",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/webpack": "^4.41.21",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-sources": "^1.4.3"
  },
  "dependencies": {
    "esbuild": "^0.8.12"
  }
}
